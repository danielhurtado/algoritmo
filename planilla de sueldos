}

void cargarvector (float salariobruto[], int n)
{
	for (int i=1; i<=n; i++)
	{ cout<<"ingrese salario bruto: ";
	    cin>> salariobruto[i];
	}
}

void calcularsalarioneto(float salarioneto[], float salariobruto[], int n )
{
	for(int i=1; i<=n; i++)
	{ 
		salarioneto [i]= salariobruto[i] - (salariobruto[i]*0.251);
	}
}

	float promedio (float salarioneto[], int n)
	{float z=0;
	
		for(int i=1; i<=n; i++)
			z=z+salarioneto[i];
		return (z);
	}
void planilla(float salariobruto[], float salarioneto[], float promedio, int n)
{
}
