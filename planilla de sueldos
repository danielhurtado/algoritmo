float promedio (float salarioneto[], int n); 
void planilla(float salariobruto[], float salarioneto[], float promedio, int n);

void main ()
{    int n; 
	 float sb[TAM], sn[TAM], p;
	cout << "ingrese el numero de empleados: ";
	cin >> n;
	cargarvector (sb, n);
	calcularsalarioneto(sn, sb, n);
	p=promedio(sn, n);
	planilla (sb, sn, p, n);
